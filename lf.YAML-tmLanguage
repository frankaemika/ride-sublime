patterns:

- comment: Port definition
  name: meta.port.lf
  begin: (port)\s*(.+?)\s
  beginCaptures:
    '1': {name: keyword.other.port.lf}
    '2': {name: constant.other.portname.lf}
  end: \n
  patterns:
    - include: '#expression'

- comment: Keywords
  name: keyword.other.lf
  match: (entry|exit|barrier|-->|<-|->)

- comment: Action definition, without script body
  name: meta.action.lf
  begin: (action)
  beginCaptures:
    '0': {name: keyword.other.function.lf}
  end: (?=@\{)
  patterns:
    - include: '#expression'

- comment: Type definition
  name: meta.type.lf
  begin: (parameterType|resultType)\s*(\{)
  beginCaptures:
    '1': {name: keyword.other.type.lf}
    '2': {name: punctuation.section.embedded.begin.lf}
  end: \}  # TODO: nested parameter definition (structs) -> problem
  endCaptures:
    '0': {name: punctuation.section.embedded.end.lf}
  patterns:
  - include: '#type'

- comment: Clientdata
  name: meta.clientdata.lf
  begin: (clientData)\s*(\{)
  beginCaptures:
    '1': {name: keyword.other.type.lf}
    '2': {name: punctuation.section.embedded.begin.lf}
  end: \}\n  # TODO: nested definitions (e.g. structs) -> problem
  endCaptures:
    '0': {name: punctuation.section.embedded.end.lf}
  patterns:
    - include: '#contextMenu'
    - include: "#string"

- comment: Parameter value definition
  name: meta.where.lf
  begin: (where)\s*(\{)
  beginCaptures:
    '1': {name: keyword.other.where.lf}
